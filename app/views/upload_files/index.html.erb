<h1>Listing Upload Files</h1>

<table>
  <thead>
    <tr>
      <th>FileName</th>
      <th>Description</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @upload_files.each do |upload_file| %>
      <tr>
        <td><%= upload_file.filename %></td>
        <td><%= upload_file.description %></td>
        <td><%= link_to 'Download', upload_file %></td>
        <td><%= link_to 'Destroy', upload_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Upload file', new_upload_file_path %>
